{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/firebase-config",
        "function": "getFirebaseClientConfig"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
